.login-form
    display block
    margin 40px 8% 0
    .input-icon
        align-items center
        border 1px solid  #aaa
        display flex
        margin-bottom 32px
        .icon
            border-right 1px solid  #ccc
            color #666
            font-size 30px
            height 50px
            line-height 50px
            text-align center
            width 60px
        input
            background none
            border none
            display block
            flex 1
            font-size 18px
            height 60px
            line-height 50px
            outline none
            padding 0 12px
    .input-checkbox
        display block
        font-size 16px
        margin 0 8px
        input
            margin-right 8px
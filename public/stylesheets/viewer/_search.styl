.viewer-search
    background #fff
    bottom 0
    box-shadow 0 0 4px rgba(#000, .1), 0 0 10px -2px rgba(#000, .1)
    box-sizing border-box
    position fixed
    right 0
    top 48px
    width 280px
    z-index 999
    .search-content
        bottom 42px
        box-sizing border-box
        left 0
        position absolute
        top 0
        width 280px
    .search-close
        background $_primary
        border 0
        bottom 0
        color rgba(#fff, .8)
        cursor pointer
        height 42px
        outline none
        position absolute
        width 280px
        .icon
            font-size 20px
            height 42px
            left 0
            line-height 42px
            position absolute
            top 0
            width 42px